<particleGroups>
	<particleGroup name="Default">
	  <particleSystem>
        <emitter type="box" size="0.15" limit="15" rate="0.1" fillInitial="true" minLifeTime="0.3" maxLifeTime="2"/>
        <updater type="lifeTime"/>
        <updater type="movement" speed="0.5"/>
        <renderer texture="smoke" aditive="false"/>
      </particleSystem>
	</particleGroup>
    <particleGroup name="Fuego raro">
      <particleSystem>
        <emitter type="ring" size="0.3" limit="800" rate="0.0015" fillInitial="false" minLifeTime="2" maxLifeTime="4" burstTime="1" burstAmount="200"/>
        <updater type="lifeTime"/>
        <updater type="gravity" gravity="-0.01"/>
        <updater type="noise" minNoise="-0.05 -0.05 -0.05" maxNoise="0.05 0.05 0.05"/>
        <updater type="size" initialSize="0.1" finalSize="2"/>
        <updater type="movement" speed="3.5"/>
        <renderer texture="smoke" aditive="false"/>
      </particleSystem>
      <particleSystem>
        <emitter type="cone" size="0.15" limit="15" rate="0.1" fillInitial="true" minLifeTime="0.3" maxLifeTime="2"/>
        <updater type="lifeTime"/>
        <updater type="movement" speed="0.5"/>
        <updater type="size" initialSize="0.1" finalSize="1"/>
        <renderer texture="fire"/>
      </particleSystem>
    </particleGroup>
    <particleGroup name="Humo">
      <particleSystem>
        <emitter type="box" size="6" limit="1000" rate="0.0005" fillInitial="true" minLifeTime="2" maxLifeTime="4" />
        <updater type="lifeTime"/>
        <updater type="noise" minNoise="-0.01 -0.01 -0.01" maxNoise="0.01 0.01 0.01"/>
        <updater type="size" initialSize="0.02" finalSize="0.04"/>
        <renderer texture="smoke" aditive="false"/>
      </particleSystem>
    </particleGroup>
</particleGroups>